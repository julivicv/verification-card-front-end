---
	import QRcode from "./QRCode"
	export interface Props {
		name: string;
		birth: string;
		class: string;
		href: string;
		link: string;
	}

	const { name, birth, class, href, link } = Astro.props;
---

<div class="card-body">
	<div class="card-content">
		<h1>Nome do Curso</h1>
		<img class="avatar" />
		<span class="student-name">Nome do aluno</span>
		<span class="birth-date">01/01/2001</span>
	</div>
	<div class="vertical-line">
		<QRcode url={link} />
	</div>
</div>
<style>
	* {
		font-family: "Roboto", sans-serif;
	}

	.card-body {
		display: flex;
		margin: auto;
		width: 900px;
		height: 500px;
		background-color: #4c7a56;
		-webkit-mask:
			radial-gradient(circle at left top, transparent 100px, black 101px),
			radial-gradient(circle at right top, transparent 100px, black 101px),
			radial-gradient(circle at left bottom, transparent 100px, black 101px),
			radial-gradient(circle at right bottom, transparent 100px, black 101px),
			linear-gradient(black, black);
		-webkit-mask-composite: destination-in;
		mask-composite: exclude;
	}

	h1,
	.birth-date,
	.student-name {
		color: #f7f7f7;
	}

	.card-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 70%;
		height: 90%;
		margin: auto;
	}

	h1 {}

	.avatar {
		height: clamp(100px, 10%, 40px);
		width: clamp(100px, 10%, 40px);
		border: 1px solid black;
		border-radius: 100%;
		background-color: #000;
		margin-bottom: 1rem;
	}

	.student-name {
		font-size: clamp(2rem, 10vh, 0.5rem);
	}

	.vertical-line {
		width: 1px;
		height: full;
		border-left: dashed 5px #fff;
		position: relative;
		right: 120px;
		top: 0;
	}
</style>